<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/singleAvailableSeatingConstraintLayout"
  android:layout_width="match_parent"
  android:layout_height="30dp">

  <TextView
    android:id="@+id/seatingNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/seat_type_place_holder"
    android:textSize="@dimen/date_label_font_size"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/numberOfSeatsTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:text="@string/number_place_holder"
    android:textSize="@dimen/date_label_font_size"
    app:layout_constraintBottom_toBottomOf="@+id/peopleIcon"
    app:layout_constraintEnd_toStartOf="@+id/peopleIcon"
    app:layout_constraintTop_toTopOf="@+id/peopleIcon" />

  <ImageView
    android:id="@+id/peopleIcon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:contentDescription="@string/seat_list_people_icon_description"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/people" />

</androidx.constraintlayout.widget.ConstraintLayout>
